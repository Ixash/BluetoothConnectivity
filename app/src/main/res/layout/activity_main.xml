<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.doomers.rahul.bluetoothconnectivity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paired_list_text"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:background="#37fe00" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/paired_device_list"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_device_list"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_below="@+id/paired_device_list"
        android:layout_alignLeft="@+id/paired_device_list"
        android:layout_alignStart="@+id/paired_device_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#f84b4b"
        android:textColor="#000000" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/new_device_list"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchbutton"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/new_device_list"
        android:layout_alignStart="@+id/new_device_list"
        android:layout_alignRight="@+id/new_device_list"
        android:layout_alignEnd="@+id/new_device_list"
        android:textStyle="bold|italic"
        android:textColor="#15cdd3"
        android:visibility="visible" />
</RelativeLayout>
